# Environment Configuration for Village Machaan Booking System

# Application Environment
NODE_ENV=development
PORT=5000

# Frontend URLs for CORS (add your deployed frontend URL)
FRONTEND_URL=http://localhost:3000
PRODUCTION_FRONTEND_URL=https://village-machaan-booking-system.vercel.app

# Database Configuration
DATABASE_PATH=./data/village_machaan.db

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Admin Configuration
ADMIN_EMAIL=admin@villagemachaan.com
ADMIN_PASSWORD=admin123

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Logging Level
LOG_LEVEL=info
