# Village Machaan Backend - Production Environment Variables
# Use these on Railway/Heroku deployment

# Server Configuration
NODE_ENV=production
PORT=$PORT

# Database Configuration (Railway provides DATABASE_URL)
DATABASE_URL=$DATABASE_URL

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_live_your_live_key_id
RAZORPAY_KEY_SECRET=your_live_razorpay_secret

# Frontend URL (for CORS)
FRONTEND_URL=https://village-machaan-booking.vercel.app
PRODUCTION_FRONTEND_URL=https://village-machaan-booking.vercel.app

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@villagemachaan.com
DEFAULT_ADMIN_PASSWORD=secure_admin_password_change_this

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

